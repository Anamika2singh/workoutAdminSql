                                <div class="d-flex align-items-baseline flex-wrap mr-5">
                                    <!--begin::Page Title-->
                                    <h2 class="d-flex align-items-center text-dark font-weight-bold my-1 mr-3">Manage Goals</h2>
                                    <!--end::Page Title-->

                                </div>
                                <!--end::Page Heading-->
                            </div>
                            <div><%=msg%></div>
                            <!--end::Info-->
                            <!--begin::Toolbar-->
                            <div class="d-flex align-items-center flex-wrap">
                                <!--begin::Button-->
                                <a href="" class="btn btn-primary btn-fixed-height font-weight-bold px-2 px-lg-5 mr-2" data-toggle="modal" data-target="#exampleModal">
                                    <i class="ki ki-plus icon-nm"></i> Add Goal
                                </a>
                                <!--end::Button-->


                            </div>
                            <!--end::Toolbar-->
                        </div>
                    </div>
                    <!--end::Subheader-->
                    <!--begin::Entry-->
                    <div class="d-flex flex-column-fluid">
                        <!--begin::Container-->
                        <div class="container-fluid">
                            <div class="card card-custom gutter-b">

                                <!--begin::Body-->
                                <div class="card-body py-0">
                                    <!--begin::Table-->

                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <div class="input-icon">
                                                <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                                <span>
														<i class="flaticon2-search-1 text-muted"></i>
													</span>
                                            </div>
                                        </div>
                                        <div class="col-md-5 my-4 offset-md-4">
                                            <div class="row justify-content-end">

                                                <div class="col-md-4 my-2 px-2 my-md-0">
                                                    <div class="d-flex align-items-center">
                                                        <select class="form-control" id="">
																<option value="">Sort By</option>
																<option value="1">Newest To Oldest</option>
																<option value="2">Oldest To Newest</option>
																<option value="3">High Priced</option>
																<option value="4">Low Priced</option>
															</select>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                    <!--end::Table-->
                                </div>
                                <!--end::Body-->
                            </div>
                            <!--begin::Advance Table Widget 1-->
                            <div class="card card-custom gutter-b">

                                <!--begin::Body-->
                                <div class="card-body py-0">
                                    <!--begin::Table-->
                                    <div class="table-responsive">
                                        <table class="table table-head-custom table-vertical-center" id="kt_advance_table_widget_1">
                                            <thead>
                                                <tr class="text-left">
                                                    <th style="width: 50px; white-space: nowrap;" class="label-inline">
                                                        Sr. No.
                                                    </th>
                                                    <th>Goal</th>
                                                    <th>Image</th>
                                                    <th>Created On</th>
                                                    <th>Updated On</th>
                                                    <th>Status</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                               <% let n=1;
                                                data.forEach(function(goal){%>
                                                <tr>
                                                    <td>
                                                        <%=n%>
                                                    </td>
                                                    <td>
                                                       <a href="" data-toggle="modal" data-target="#updateModal<%=goal.goal_id%>"><%=goal.goal_name%></a>
                                                       <!-- Modal -->
                                                        <div class="modal fade" id="updateModal<%=goal.goal_id%>" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title" id="updateModalLabel">Update Goal</h5>
                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                  </button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <form method="post" action="/goal/updateGoal/<%=goal.goal_image%>/<%=goal.goal_id%>" enctype="multipart/form-data">
                                                                            <div class="form-group row">
                                                                                <div class="col-md-12">
                                                                                    <label>Goal Name</label>
                                                                                    <input type="text" class="form-control" name="goalName" placeholder="Goal Name" value="<%=goal.goal_name%>" maxlength="100">
                                                                                </div>

                                                                            </div>
                                                                            <div class="form-group row">
                                                                                <div class="col-md-3">
                                                                                    <label>Insert Image</label>
                                                                                    <div class="dropzone dropzone-multi" id="kt_dropzone_5">
                                                                                        <div class="dropzone-panel mb-lg-0 mb-2">
                                                                                            <input type="file" class="dropzone-select btn btn-light-primary font-weight-bold btn-sm" id="image" name="goalImage">
                                                                                        </div>
                                                                                    </div>
                                                                                </div>

                                                                            </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                            <button type="submit" class="btn btn-primary">Update</button>
                                                                        </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div> 
                                                    </td>
                                                    <td>
                                                        <img src="https://excercisedocsfirdstisync.s3.us-east-2.amazonaws.com/goals/<%=goal.goal_image%>" width="150px" height="80px">
                                                    </td>
                                                    <td>
                                                        <%=goal.created_at%>
                                                    </td>
                                                    <td>
                                                        <%=goal.updated_at%>
                                                    </td>
                                                    <td class="pr-0">
                                                        <span class="switch switch-sm">
                                                                <label>
                                                                    <input type="checkbox" checked="checked" name="select" />
                                                                    <span></span>
                                                        </label>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a id="deletedGlobal" data-href="/goal/deleteGoal/<%=goal.goal_image%>/<%=goal.goal_id%>" class="btn btn-icon btn-danger mb-1 btn-sm"> <i class="flaticon-delete"></i> </a>
                                                    </td>
                                                </tr>
                                                <%n++;})%>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--end::Table-->
                                </div>
                                <!--end::Body-->
                            </div>
                            <!--end::Advance Table Widget 1-->


                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Entry-->
                </div>
                <!--end::Content-->
                <!--begin::Footer-->
                <!--doc: add "bg-white" class to have footer with solod background color-->
