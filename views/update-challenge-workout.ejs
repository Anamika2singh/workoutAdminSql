                        <!--begin::Container-->
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 col-xl-12 col-md-12">
                                   <form id="add" action="/workout/updateChallengeWorkout/<%=data.workout.image%>/<%=data.workout.workout_id%>" method="POST" enctype="multipart/form-data">
                                    <div class="card card-custom gutter-b">
                                        <div class="card-body">
                                            <div class="form-group row">
                                                <div class="col-md-6">
                                                    <label>Workout Name</label>
                                                    <input type="text" name="challengeWorkoutName" class="form-control" placeholder="Goal Workout Name" value="<%=data.workout.name%>" required="true" maxlength="100">
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Insert media</label>
                                                    <div class="dropzone dropzone-multi" id="kt_dropzone_5">
                                                        <div class="dropzone-panel mb-lg-0 mb-2">
                                                         <input type="file" class="dropzone-select font-weight-bold btn-sm" id="image" name="challengeWorkoutImage" >
                                                      </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card card-custom gutter-b">
                                        <div class="card-header">
                                            <div class="card-title justify-content-center align-items-start flex-column">
                                                <h3 class="card-label">Exercises
                                                </h3>
                                            </div>

                                            <div class="card-toolbar">
                                                <button class="btn f-right btn-success mb-1 btn-sm add-new-exs" form="">
                                                    <i class="flaticon-plus"></i> Add 
                                                    </button>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <%data.workout.exercises.forEach(function(compExercise){%>
                                            <div class="bg-gray-100 delete-new-exs-box d-block py-3 px-3 mb-3">
                                                <div class="form-group align-items-end row">
                                                    <div class="col-md-6">
                                                        <label>Exercise</label>
                                                        <select name="exercise[]" class="form-control" id="exampleSelect2" required="true">
                                                            <%data.exercises.forEach(function(exercise){%>
                                                            <%if(compExercise.exercise_id == exercise.exercise_id){%>
                                                        <option value="<%=exercise.exercise_id%>.<%=exercise.name%>" selected><%=exercise.name%></option>
                                                        <%}else{%>
                                                        <option value="<%=exercise.exercise_id%>.<%=exercise.name%>"><%=exercise.name%></option>
                                                        <%}})%>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <label>Reps/Durs</label>
                                                                <div class="row">
                                                                    <div class="col-6">
                                                                        <select name="type[]" class="form-control" required="true">
                                                                        	<% if(compExercise.repetition!=null){%>
                                                                            <option value="1" selected>Repetition</option>
                                                                            <option value="2">Duration</option>
                                                                            <%}else{%>
                                                                            <option value="1">Repetition</option>
                                                                            <option value="2" selected>Duration</option>
                                                                            <%}%>
                                                                        </select>
                                                                    </div>
                                                                    <div class="col-6">
                                                                        <input name="reps[]" type="number" class="form-control" placeholder="Duration in Seconds" required="true" maxlength="4" value="<% if(compExercise.repetition!=null){%><%=compExercise.repetition%><%}else{%><%=compExercise.duration%><%}%>">
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-1">
                                                        <button class="btn btn-icon btn-danger mb-1 btn-sm delete-new-exs-btn"> <i class="flaticon-delete"></i> </button> 
                                                    </div>
                                                </div>

                                            </div>
                                            <%})%>
                                           <div class="add-new-exs-box">

                                            </div>

                                        </div>
                                       
                                        <div class="card-footer">
                                            <div class="row">
                                                <div class="col-12 text-right">
                                                    <a href="/workout/manageChallengeWorkout" class="btn ">Cancel</a>
                                                    <button type="submit" form="add" class="btn btn-success mr-3">Save workout</button>

                                                </div>

                                            </div>

                                        </div>

                                    </div>


                                  </form>
                                </div>

                            </div>



                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Entry-->
                </div>
                <!--end::Content-->
                <!--begin::Footer-->
                <!--doc: add "bg-white" class to have footer with solod background color-->
                <div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
                    <!--begin::Container-->
                    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between">
                        <!--begin::Copyright-->
